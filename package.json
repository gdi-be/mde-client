{
  "name": "mde-client",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun ./build/index.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "bun test",
    "prepare": "npm run smui-theme-light && npm run smui-theme-dark",
    "smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
    "smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark"
  },
  "devDependencies": {
    "@inlang/paraglide-sveltekit": "^0.12.1",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/bun": "^1.1.13",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "globals": "^15.12.0",
    "mdsvex": "^0.12.3",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "smui-theme": "^8.0.0-beta.0",
    "svelte": "^5.5.3",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^4.1.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "@smui-extra/autocomplete": "^8.0.0-beta.0",
    "@smui-extra/chip-input": "^8.0.0-beta.0",
    "@smui/button": "^8.0.0-beta.0",
    "@smui/card": "^8.0.0-beta.0",
    "@smui/dialog": "^8.0.0-beta.0",
    "@smui/form-field": "^8.0.0-beta.0",
    "@smui/icon-button": "^8.0.0-beta.0",
    "@smui/select": "^8.0.0-beta.0",
    "@smui/switch": "^8.0.0-beta.0",
    "@smui/textfield": "^8.0.0-beta.0",
    "@smui/tooltip": "^8.0.0-beta.0",
    "cookie": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "loggisch": "^0.0.1",
    "marked": "^15.0.2"
  }
}
